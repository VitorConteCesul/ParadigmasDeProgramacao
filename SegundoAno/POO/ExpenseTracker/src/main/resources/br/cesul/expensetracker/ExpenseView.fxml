<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.cesul.expensetracker.view.ExpenseView">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="91.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="100.0" prefWidth="436.0" spacing="10.0">
                     <children>
                        <TextField fx:id="descriptionField" text="Digite a descrição do gasto" />
                        <TextField fx:id="amountField" text="Digite o valor do gasto" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="100.0" prefWidth="368.0" spacing="10.0">
                     <children>
                        <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="347.0" promptText="Selecione a data do gasto" />
                        <Button fx:id="addbutton" mnemonicParsing="false" prefHeight="30.0" prefWidth="329.0" text="Adicionar" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </top>
         <center>
            <TableView fx:id="expenseTable" prefHeight="358.0" prefWidth="600.0" style="-fx-alignment: CENTER;" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="dateCol" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Data" />
                  <TableColumn fx:id="descCol" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Descrição" />
                <TableColumn fx:id="amountCol" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Valor" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <bottom>
            <HBox prefHeight="56.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="66.0" prefWidth="270.0">
                     <children>
                        <Label fx:id="totalLabel" nodeOrientation="RIGHT_TO_LEFT" prefHeight="18.0" prefWidth="124.0" text="Valor Total R$ 0.00">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" prefHeight="66.0" prefWidth="342.0">
                     <children>
                        <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="84.0" text="Excluir">
                           <VBox.margin>
                              <Insets right="10.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
